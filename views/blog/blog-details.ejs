<%- include ../partials/header %> <%- include ../partials/menu %>



		<section class="breadcrumb-area" style="background-image:url(/images/background/news.jpg);">
			<div class="container">
				<div class="row">
					<div class="col-md-12">
						<div class="breadcrumbs text-center">
							<h1><%= post.heading %></h1>
							 
						</div>
					</div>
				</div>
			</div>
			<% if (currentUser) { %>
				<div class="breadcrumb-bottom-area">
					<div class="container">
						<div class="row">
							<div class="col-lg-8 col-md-5 col-sm-5">
								<ul>
										<li><a href="/blog/<%= post.myslug %>/edit" class="btn color1_bg tran3s">Edit Post +</a></li>
										<li><form id="form" method="post" action="/blog/<%=post.myslug %>?_method=DELETE">
											<input type="submit" class="btn btn-danger btn-red btn-button" value="Delete Post">
										</form></li>
									</ul>
								</div>
							</div>
						</div>
					</div>
					<% } %>
		</section>

		<section class="news single_news_page with_sidebar news_single">
			<div class="container">
				<div class="row">
					<div class="col-md-12 col-sm-12 col-xs-12">
						<div class="single_left_bar">
							<div class="blogList_single_post clear_fix wow fadeInUp"
								style="visibility: visible; animation-name: fadeInUp;">
								<div class="img_holder">
									<img src="<%= post.image %>" alt="News" class="img-responsive">
									<!-- <div class="opacity tran3s">
										<div class="icon">
											<span><a href="#" class="border_round">+</a></span>
										</div> 
									</div>  -->
								</div> 
								<div class="post">

									<div class="text">
										<h4><a href="#"><%= post.heading %></a></h4>
										<ul>
											<li><a href="#" class="tran3s"><i class="fa fa-user" aria-hidden="true"></i>
												<%= post.author.username %>
													</a></li>
					
											<li><a href="#" class="tran3s"><i class="fa fa-clock-o" aria-hidden="true"></i>
												<%= post.date.toDateString() %></a></li>
										</ul>
									
										<div>
											<%- post.description %>
										</div>

									</div>

									<div class="share_option clear_fix">
										<h4 class="float_left">If you like this post, please share to others.</h4>
										<ul class="social_icon float_left">
											<li><a href="#" class="tran3s" title="Facebook"><i class="fa fa-facebook"
														aria-hidden="true"></i></a></li>
											<li><a href="#" class="tran3s" title="Twitter"><i class="fa fa-twitter"
														aria-hidden="true"></i></a></li>
											<li><a href="#" class="tran3s" title="Linkedin"><i class="fa fa-google-plus"
														aria-hidden="true"></i></a></li>
											<li><a href="#" class="tran3s" title="Youtube"><i class="fa fa-linkedin"
														aria-hidden="true"></i></a></li>
										</ul>
									</div>

								</div> <!-- End of .post -->

		

							</div>

						</div>
					</div>


				</div>
			</div>
		</section>


		<!-- Footer************************* -->
		<%- include ../partials/footer %> 